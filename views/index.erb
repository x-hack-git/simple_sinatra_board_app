<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <ul>
      <% @data.each do |mes| %>
        <li><%= mes["id"] %>
          /
          <%= mes["name"] %>
          /
          <%= mes["comment"] %>
        </li>
      <% end %>
    </ul>
    <form action="/comments" method="post">
